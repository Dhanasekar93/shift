<div id="migration-comments">

  <br>
  <h2>Comments
  <!-- future feature <div style="float: right; font-size: 14px; padding-top: 18px;">Receive emails?<input style="margin-left: 8px;" type="checkbox"></div> -->
  </h2>
  <hr>

  <table id="comments_table">
    <% @migration.comments.each do |comment| %>
    <tr>
      <td class="skinny">
        <center><img class="profile-picture" src="<%= @profile[comment.author][:photo] %>" height="50" width="50"></center>
        <div class="comment-author"><%= comment.author %>@</div>
      </td>
      <td class="skinny">
        <div><i><%= comment.created_at.to_time.strftime('%m/%d/%Y') %></i></div>
        <div><i><%= comment.created_at.to_time.strftime('%l:%M %p') %></i></div>
      </td>
      <td class="fat">
        <%= comment.comment %>
      </td>
    </tr>
    <% end %>

    <tr>
      <td>
        <center><img class="profile-picture" src="<%= @profile[current_user_name][:photo] %>" height="50" width="50"></center>
        <div class="comment-author"><%= current_user_name %>@</div>
      </td>
      <td colspan="2">
        <textarea id="comment_field" class="form-control" author="<%= current_user_name %>" migration_id="<%= @migration.id %>" placeholder="Write comment here."></textarea>
        <div id="post_comment" class="btn btn-info btn-lg">Post</div>
      </td>
    </tr>
  </table>

</div>
